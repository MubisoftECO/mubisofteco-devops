pipeline {
    agent any
    tools {
        maven 'MAVEN3'
    }
    stages {
        stage('Clean') {
            steps {
                git url: 'https://github.com/salvadorcuray/empty-login.git', branch: 'develop'   
                sh 'mvn clean'
            }
        }
        stage('Intall') {
            when {
                expression {
                    currentBuild.result == null || currentBuild.result == 'SUCCESS' 
                }
            }
            steps {
                sh 'mvn install -Dmaven.test.skip=true'
            }
        }
    }
}

